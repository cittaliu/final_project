<%= render partial: '/partials/header' %>
<%= render partial: '/partials/side' %>

<div id="content" class="app-content" role="main">
  <div class="app-content-body">

  <div class="hbox hbox-auto-xs bg-light ">

  <div class="col" id="email">

  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active wrapper b-b b-light"><a href="#task" aria-controls="home" role="tab" data-toggle="tab">
      Tasks</a>
    </li>
      <li role="presentation" class="wrapper b-b b-light"><a href="#email" aria-controls="home" role="tab" data-toggle="tab">
        Emails</a>
      </li>
  </ul>

<div class="col-md-12">
  <div id="task">

  <!-- tasks -->
    <div class="panel wrapper">
      <div class="row">
        <div class="col-md-12 b-r b-light no-border-xs">
          <a href class="text-muted pull-right text-lg"></a>
          <h4 class="font-thin m-t-none m-b-md text-muted">My Tasks</h4>
            <%= button_to "Add a New Task", {:controller => 'contacts', :action => 'index', :id => current_user.id }, method: :get, class: "btn btn-info btn-sm pull-right", form: {style: 'display:inline-block;'} %><br>
            <br>
          <% @events.each do |task| %>
          <div class="m-b">
            <div class="m-b">
              <span class="label text-base bg-info pos-rlt m-r"><i class="arrow right arrow-warning"></i><%= task.end %></span>
              <%= link_to task.summary, usercontacts_path %>
            </div>
            <div class="m-b">
              <%= task.description %>
            </div>
          </div>
          <li class="line dk"></li>
          <% end %>
        </div>
      </div>
    </div>
    <!-- / tasks -->
  </div>

    <div id="email">
      <div class="panel wrapper">
        <div class="row">
          <div class="col-md-12 b-r b-light no-border-xs">
            <a href class="text-muted pull-right text-lg"></a>
            <h4 class="font-thin m-t-none m-b-md text-muted">My Emails</h4>
      <ul class="list-group list-group-lg no-radius m-b-none m-t-n-xxs">
        <% @show_messages.each do |message|%>
        <li class="list-group-item clearfix b-l-3x b-l-info">
          <a class="avatar thumb pull-left m-r">
            <%= image_tag('a0.jpg')%>
          </a>
          <div class="pull-right text-sm text-muted">
            <span class="hidden-xs "><%= message[:from] %></span>
            <i class="fa fa-paperclip m-l-sm"></i>
          </div>
          <div class="clear">
            <div><a class="text-md " href="https://www.gmail.com" target="_blank"><%= message[:subject] %></a><span class="label bg-light m-l-sm ">job search</span></div>
            <div class="text-ellipsis m-t-xs "><%= message[:body] %></div>
          </div>
        </li>
        <%end %>
      </ul>
      <br>
  </div>
  </div>
</div>
</div>
</div>

</div>


  <div class="col w-md lter b-l">
    <div class="vbox">
      <div class="row-row">
        <div class="cell">
          <div class="cell-inner">
            <div class="wrapper-md">
              <div class="col-md-12">
                <div class="panel wrapper">
                  <h4 class="font-thin m-t-none m-b text-muted">My Metrics</h4>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>
