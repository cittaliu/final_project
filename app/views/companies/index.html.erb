<%= render partial: '/partials/header' %>
<%= render partial: '/partials/side' %>
<h1>I was just renamed company#index </h1>
<div class="text-danger">
  <%=flash[:error] %>
</div>
Enter a company to associate with this Opportunity
<hr>

<%= form_tag(companies_path, :method => "get", id: "search-form") do %>
<!-- text field tag=action,args,identifier,placeholdertext... -->
<%= text_field_tag :search, params[:search], class: "search-query", placeholder: "Find ore create a company", type: "search", data: {autocomplete: companies_autocomplete_company_name_path} %>
<%= submit_tag "Search" %>
<%end%>

<script type="text/javascript" charset="utf-8">
  $( "#search" ).autocomplete({
      source: <% @companies %>
    });
  } );
</script>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.first(10).each do |company| %>
      <tr>
        <td><%=link_to company.name, company_path(company) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
